<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <com.onebip.onedk.Banner
        android:id="@+id/banner_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:bannerId="@string/onedk_top_banner_id"/>

    <com.onebip.onedk.Banner
        android:id="@+id/banner_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:bannerId="@string/onedk_bottom_banner_id"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/button_interstitial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Test Interstitial"/>

        <Button
            android:id="@+id/button_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchasable Items"/>

    </LinearLayout>

</RelativeLayout>
